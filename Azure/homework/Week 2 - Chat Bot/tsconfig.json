{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*",
        "*"
      ]
    },
    "lib": ["dom", "es2015"],
  },
  "include": ["src"]
}